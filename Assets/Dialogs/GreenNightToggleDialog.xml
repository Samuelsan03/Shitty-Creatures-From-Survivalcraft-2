<CanvasWidget xmlns="runtime-namespace:Game" Size="700, 320" HorizontalAlignment="Center" VerticalAlignment="Center" ClampToBounds="true">
  <!-- Fondo semitransparente (alpha=200) para ver el gameplay detrás -->
  <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 255" OutlineThickness="2" />
  
  <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="15, 15">
    <!-- Título -->
    <LabelWidget Name="TitleLabel" Text="Green Night Configuration" Color="255,255,255" HorizontalAlignment="Center" FontScale="1.55" Margin="0,10"/>
    
    <CanvasWidget Size="0, 5" />
    
    <!-- Checkbox -->
    <CanvasWidget Size="Infinity, 60">
      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <CheckboxWidget Name="Checkbox" Text="Enable Green Night" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      </StackPanelWidget>
    </CanvasWidget>
    
    <!-- Espacio para el texto explicativo (se inserta desde código) -->
    
    <CanvasWidget Size="0, Infinity" />
    
    <!-- Botones -->
    <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="0,10">
      <BevelledButtonWidget Name="OKButton" Style="{Styles/ButtonStyle_160x60}" Text="OK" Margin="20, 0" BevelColor="255,255,255" CenterColor="0,0,0,0"/>
      <BevelledButtonWidget Name="CancelButton" Style="{Styles/ButtonStyle_160x60}" Text="Cancel" Margin="20, 0" BevelColor="255,255,255" CenterColor="0,0,0,0"/>
    </StackPanelWidget>
  </StackPanelWidget>
</CanvasWidget>
