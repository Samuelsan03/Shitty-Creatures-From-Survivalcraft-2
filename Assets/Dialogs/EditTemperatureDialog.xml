<CanvasWidget xmlns="runtime-namespace:Game">
  <CanvasWidget Size="500, 300" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <BevelledRectangleWidget Style="{Styles/DialogArea}" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">
      <LabelWidget Name="EditTemperatureDialog.Title" Font="{Fonts/Pericles}" Text="Air Conditioner - Settings" HorizontalAlignment="Center"/>
      <CanvasWidget Size="0, Infinity" />
      <SliderWidget Name="EditTemperatureDialog.TemperatureSlider" Granularity="1" MinValue="0" MaxValue="15" HorizontalAlignment="Center" Margin="40, 0" />
      <CanvasWidget Size="0, Infinity" />
      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="EditTemperatureDialog.Ok" Style="{Styles/ButtonStyle_160x60}" Text="Ok" Margin="20, 0" />
        <BevelledButtonWidget Name="EditTemperatureDialog.Cancel" Style="{Styles/ButtonStyle_160x60}" Margin="20, 0" Text="Cancel"/>
      </StackPanelWidget>
      
    </StackPanelWidget>
  </CanvasWidget>
</CanvasWidget>
