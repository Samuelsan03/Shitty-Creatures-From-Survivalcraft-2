<AutoCannonWidget xmlns="runtime-namespace:Game">
	<BevelledRectangleWidget Size="900, 360" BevelSize="3"/>
	<LabelWidget CanvasWidget.Position="36, 14" Text="Auto-Cañón"  Color="255, 255, 255, 192"/>
	<LabelWidget CanvasWidget.Position="575, 14" Text="Inventario"  Color="255, 255, 255, 192"/>
	<CanvasWidget Size="200, 288" CanvasWidget.Position="35, 52">
		<InventorySlotWidget Name="InventorySlot" Size="200, 288" VerticalAlignment="Center" HideHighlightRectangle="true" ProcessingOnly="true" HideEditOverlay="true"/>
		<CanvasWidget CanvasWidget.Position="210, -90">
			<LabelWidget CanvasWidget.Position="5, 52" Text="Velocidad de proyectil"/>
			<SliderWidget Name="ProjectileSpeedSlider" CanvasWidget.Position="36, 74" Size="270, 40"/>
			<CanvasWidget Size="230, 40" CanvasWidget.Position="210, 74">
				<BevelledRectangleWidget Style="{Styles/TextBoxArea}" Size="50, 40"/>
				<TextBoxWidget Name="ProjectileSpeedTextBox" CanvasWidget.Position="10, 0" Size="30, 40" FontScale="0.8" MaximumLength="2"/>
			</CanvasWidget>
			<LabelWidget CanvasWidget.Position="5, 120" Text="Disparos por segundo"/>
			<SliderWidget Name="FireRateSlider" CanvasWidget.Position="36, 142" Size="270, 40"/>
			<CanvasWidget Size="230, 40" CanvasWidget.Position="210, 142">
				<BevelledRectangleWidget Style="{Styles/TextBoxArea}" Size="50, 40"/>
				<TextBoxWidget Name="FireRateTextBox" CanvasWidget.Position="10, 0" Size="30, 40" FontScale="0.8" MaximumLength="2"/>
			</CanvasWidget>
			<LabelWidget CanvasWidget.Position="5, 188" Text="Dispersión de proyectiles"/>
			<SliderWidget Name="ProjectileSpreadSlider" CanvasWidget.Position="36, 210" Size="270, 40"/>
			<CanvasWidget Size="230, 40" CanvasWidget.Position="210, 210">
				<BevelledRectangleWidget Style="{Styles/TextBoxArea}" Size="50, 40"/>
				<TextBoxWidget Name="ProjectileSpreadTextBox" CanvasWidget.Position="10, 0" Size="30, 40" FontScale="0.8" MaximumLength="2"/>
			</CanvasWidget>
			
			<LabelWidget CanvasWidget.Position="5, 256" Text="Combustible"/>
			<InventorySlotWidget Name="FuelSlot" CanvasWidget.Position="40, 284" />

		</CanvasWidget>
		<CanvasWidget CanvasWidget.Position="375, 175">
			<BevelledButtonWidget Name="OkButton" Text="Aceptar" Style="{Styles/ButtonStyle_160x60}" />
			<CanvasWidget CanvasWidget.Position="10, 55">
				<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
					<BevelledButtonWidget Name="HelpButton" Text="" Style="{Styles/ButtonStyle_Help}" />
					<BevelledButtonWidget Name="CancelButton" Text="X" Style="{Styles/ButtonStyle_70x60}" />
				</StackPanelWidget>
			</CanvasWidget>
		</CanvasWidget>
	</CanvasWidget>
	<GridPanelWidget Name="InventoryGrid" CanvasWidget.Position="575, 52" ColumnsCount="4" RowsCount="4"/>
</AutoCannonWidget>
